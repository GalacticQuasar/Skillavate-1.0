<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="theme-color" content="#008ca8" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="icon" href="skillavate-icon.ico" />
    <title>Skillavate</title>
  </head>
  <body>
    <!-- Header -->
    <%- include('partials/header') %>

    <div
      class="container"
      style="
        margin-top: 30px;
        background-color: #008ca88a;
        padding-top: 20px;
        padding-bottom: 20px;
        width: max(25%, 400px);
      "
    >
      <div class="text-center"><h1>Service Information</h1></div>
      <hr style="border-top: 1px solid var(--dark-color)" />
      <form action="/addService/submit" method="post" name="myForm">
        <fieldset>
          <label class="form-label"><h2>Title</h2></label>
          <input
            required
            type="text"
            id="enter-title"
            name="title"
            class="form-control"
          />
          <label for="enter-description"><h2>Description</h2></label>
          <textarea
            class="form-control"
            name="description"
            id="enter-description"
            required
          ></textarea>
        </fieldset>
        <fieldset>
          <label for="enter-location"><h2>Location:</h2></label>
          <input
            type="text"
            required
            class="form-control"
            name="location"
            id="enter-location"
            maxlength="5"
            minlength="5"
          />
        </fieldset>
        <fieldset>
          <label for="enter-skill-group"> <h2>Skill Group:</h2></label>
          <select
            required
            class="form-select"
            id="enter-skill-group"
            name="skillgroup"
          >
            <option value="">None</option>
            <option value="1">Skill Group 1</option>
            <option value="2">Skill Group 2</option>
            <option value="3">Skill Group 3</option>
          </select>
        </fieldset>

        <fieldset>
          <label> <h2>Skills:</h2></label>
          <div class="form-check">
            <input
              type="checkbox"
              class="form-check-input"
              id="enter-skill-1"
              name="skill"
              value="1"
            />
            <label for="enter-skill-1" class="form-check-label"
              ><h4>Skill 1</h4></label
            >
          </div>
          <div class="form-check">
            <input
              type="checkbox"
              class="form-check-input"
              id="enter-skill-2"
              name="skill"
              value="2"
            />
            <label for="enter-skill-2" class="form-check-label"
              ><h4>Skill 2</h4></label
            >
          </div>
          <div class="form-check">
            <input
              type="checkbox"
              class="form-check-input"
              id="enter-skill-3"
              name="skill"
              value="3"
            />
            <label for="enter-skill-3" class="form-check-label"
              ><h4>Skill 3</h4></label
            >
          </div>
        </fieldset>
        <fieldset>
          <hr style="border-top: 1px solid var(--dark-color)" />
          <div class="text-center"><h1 class="">Contact Info</h1></div>

          <h2>Phone</h2>
          <input class="form-control" type="text" name="phone" />
          <h2>Email</h2>
          <input class="form-control" type="email" name="email" />
          <h2>Website</h2>
          <input class="form-control" type="text" name="website" />
          <h2>Photo Url</h2>
          <input type="text" id="photo-url" name="photo" class="form-control" />
        </fieldset>
        <button
          class="btn"
          style="margin: 25px auto"
          type="submit"
          onclick="return submitform('action','event')"
        >
          Submit
        </button>
      </form>
    </div>
    <form
      class="container"
      style="
        margin-top: 30px;
        background-color: #008ca8;
        color: white;
        padding-top: 20px;
        padding-bottom: 20px;
        width: max(25%, 400px);
      "
      action="addService/request"
      ,
      method="post"
      ;
    >
      <div>
        <label for="suggest-skill" class="form-check-label"
          ><h2>Request a skill to be added</h2></label
        >
        <input
          type="input"
          class="form-control"
          id="suggest-skill"
          name="suggest"
          required
        />
      </div>
      <button
        style="background-color: #008ca88a; color: white"
        style="margin: 25px auto"
        type="submit"
      >
        Submit
      </button>
    </form>
    <script>
      function submitform(action, event) {
        let f = document.forms["myForm"];

        if (
          !(f.email.value != "" || f.phone.value != "" || f.website.value != "")
        ) {
          alert("Please fill out atleast one contact info");
          return false;
        }
        return true;
      }
    </script>
    <!-- Footer -->
    <%- include('partials/footer') %>
  </body>
</html>
